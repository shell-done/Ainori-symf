{# Page de connexion affichée lorsque l'utilisateur n'est pas authentifié #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block page %}
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <img src="{{ asset('img/banner_whitebg.png') }}" class="login-banner">

                <div class="block">
                    <div class="block-header">
                        <span class="block-title">Connexion</span>
                    </div>
                    <div class="block-body">
                        <form action="{{ path('login') }}" method="post">
                            <label for="username">Identifiant :</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="admin"/>

                            <label for="password">Mot de passe :</label>
                            <input type="password" id="password" name="_password" placeholder="admin"/>

                            <div class="form-error">
                                {% if error %}
                                    Erreur d'authentification : {{ error.messageKey|trans(error.messageData, 'security') }}
                                {% endif %}
                            </div>
                            
                            <div class="form-footer">
                                <div></div>
                                <button type="submit">Se connecter</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}
