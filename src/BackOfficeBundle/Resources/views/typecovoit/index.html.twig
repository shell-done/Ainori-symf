{# Page affichant la liste des entités, seuls les champs importants sont affichés #}

{% extends '@BackOffice/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/list.css') }}" />
{% endblock %}

{% block body %}
    <div class="list-header">
        <h1>Typecovoits list</h1>
        <a href="{{ path('typecovoit_new') }}">Create a new typeCovoit</a>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th style="width: 80%">Type</th>
                <th style="width: 10%; text-align: right">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for typeCovoit in typeCovoits %}
            <tr onclick="window.location.href = '{{ path('typecovoit_show', { 'id': typeCovoit.id }) }}'">
                <td>{{ typeCovoit.id }}</td>
                <td>{{ typeCovoit.type }}</td>
                <td>
                    <a href="{{ path('typecovoit_edit', { 'id': typeCovoit.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
