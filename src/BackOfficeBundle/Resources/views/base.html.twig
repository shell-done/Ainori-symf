{# Fichier de base utilisé par toutes les pages du back office UNE FOIS AUTHENTIFIÉ #}
{# Hérite du fichier base.html situé dans app/config/Resources/views/base.html.twig #}
{# Ajoute un header (le logo et le bouton de déconnexion) ainsi la barre de navigation pour accéder aux différentes tables#}

{% extends 'base.html.twig' %}

{% block page %}
    <header class="container">
        <img src="{{ asset('img/banner_whitebg.png') }}" class="banner" onclick="window.location.href = '{{ path('back_office_homepage') }}'">
        <img src="{{ asset('img/logout.png') }}" class="logout" onclick="window.location.href = '{{ path('logout') }}'">
    </header>
    <nav>
        <div class="container">
            <div class="row">
                <div class="col-2 nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">Utilisateurs</a>

                    <div class="dropdown-menu" x-placement="bottom-start">
                        <a class="dropdown-item" href="{{ path('utilisateur_index') }}">Utilisateurs</a>
                        <a class="dropdown-item" href="{{ path('categorie_index') }}">Catégories</a>
                    </div>
                </div>
                <div class="col-2 nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">Véhicules</a>

                    <div class="dropdown-menu" x-placement="bottom-start">
                        <a class="dropdown-item" href="{{ path('possede_index') }}">Possède</a>
                        <a class="dropdown-item" href="{{ path('voiture_index') }}">Voitures</a>
                        <a class="dropdown-item" href="{{ path('marque_index') }}">Marques</a>
                        <a class="dropdown-item" href="{{ path('typevehicule_index') }}">Types de vehicule</a>
                    </div>
                </div>
                <div class="col-2 nav-item"><a href="{{ path('ville_index') }}">Villes</a></div>
                <div class="col-2 nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">Trajets</a>

                    <div class="dropdown-menu" x-placement="bottom-start">
                        <a class="dropdown-item" href="{{ path('trajet_index') }}">Trajets</a>
                        <a class="dropdown-item" href="{{ path('typetrajet_index') }}">Types de trajet</a>
                    </div>
                </div>
                <div class="col-2 nav-item dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">Covoiturages</a>

                    <div class="dropdown-menu" x-placement="bottom-start">
                        <a class="dropdown-item" href="{{ path('covoiturage_index') }}">Covoiturages</a>
                        <a class="dropdown-item" href="{{ path('typecovoit_index') }}">Types de covoiturage</a>
                        <a class="dropdown-item" href="{{ path('co2_index') }}">Co2</a>
                    </div>
                </div>
                <div class="col-2 nav-item"><a href="{{ path('api_documentation') }}">Doc API</a></div>
            </div>
        </div>
    </nav>
    
    <div id="main" class="container">
        {% block body %}{% endblock %}
    </div>
{% endblock %}