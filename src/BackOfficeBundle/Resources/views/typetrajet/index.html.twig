{% extends '@BackOffice/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/list.css') }}" />
{% endblock %}

{% block body %}
    <div class="list-header">
        <h1>Typetrajets list</h1>
        <a href="{{ path('typetrajet_new') }}">Create a new typeTrajet</a>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th style="width: 80%">Typetrajet</th>
                <th style="width: 10%">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for typeTrajet in typeTrajets %}
            <tr onclick="window.location.href = '{{ path('typetrajet_show', { 'id': typeTrajet.id }) }}'">
                <td>{{ typeTrajet.id }}</td>
                <td>{{ typeTrajet.typeTrajet }}</td>
                <td>
                    <a href="{{ path('typetrajet_edit', { 'id': typeTrajet.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
