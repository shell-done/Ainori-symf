{% extends '@BackOffice/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/list.css') }}" />
{% endblock %}

{% block body %}
    <div class="list-header">
        <h1>Utilisateurs list</h1>
        <a href="{{ path('utilisateur_new') }}">Create a new utilisateur</a>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th style="width: 20%">Nom</th>
                <th style="width: 20%">Prenom</th>
                <th style="width: 40%">Mail</th>
                <th style="width: 10%; text-align: right">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr onclick="window.location.href = '{{ path('utilisateur_show', { 'id': utilisateur.id }) }}'">
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.mail }}</td>
                <td>
                    <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
