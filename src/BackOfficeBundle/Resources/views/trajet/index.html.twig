{% extends '@BackOffice/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/list.css') }}" />
{% endblock %}

{% block body %}
    <div class="list-header">
        <h1>Trajets list</h1>
        <a href="{{ path('trajet_new') }}">Create a new trajet</a>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th style="width: 20%">Datedepart</th>
                <th style="width: 20%">Heuredepart</th>
                <th style="width: 20%">Nbplace</th>
                <th style="width: 20%">Duree</th>
                <th style="width: 10%; text-align: right">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for trajet in trajets %}
            <tr onclick="window.location.href = '{{ path('trajet_show', { 'id': trajet.id }) }}'">
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.dateDepart|date('d/m/Y') }}</td>
                <td>{% if trajet.heureDepart %}{{ trajet.heureDepart|date('H:i') }}{% endif %}</td>
                <td>{{ trajet.nbPlace }}</td>
                <td>{{ trajet.duree }} h</td>
                <td>
                    <a href="{{ path('trajet_edit', { 'id': trajet.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
